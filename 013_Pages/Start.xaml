<Page x:Class="_013_Pages.Start"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_013_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="500"
      Title="Start">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnInfo" Margin="0 0 15 0" Height="50" Width="80" Click="btnInfo_Click">Information</Button>
            <Button x:Name="btnLog" Margin="15 0 15 0" Height="50" Width="80" Click="btnLog_Click">Login</Button>
            <Button x:Name="btnSign" Margin="15 0 0 0" Height="50" Width="80" Click="btnSign_Click">SignUp</Button>
        </StackPanel>
    </Grid>
</Page>
